{
  "extends": [
    "expo/tsconfig.base",
    "@react-native/typescript-config/tsconfig.json"
  ],
  "exclude": [
    "__tests__/**/*-test.ts"
  ],
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}
